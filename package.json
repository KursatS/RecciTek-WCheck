{
  "name": "reccitek-wcheck",
  "version": "1.2.1",
  "description": "RecciTek WCheck - Garanti Takip Sistemi",
  "author": "Kürşat Sinan",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && copy src\\*.html dist\\ && copy src\\splash.html dist\\",
    "start": "npm run build && npx electron dist/main.js",
    "dev": "tsc --watch & copy src\\*.html dist\\ --watch & copy src\\splash.html dist\\ --watch & npx electron dist/main.js --disable-gpu --disable-web-security --disable-features=VizDisplayCompositor"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "jsdom": "^22.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.reccitek.wcheck",
    "productName": "RecciTek WCheck",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {},
    "mac": {
      "icon": "logo.icns"
    },
    "linux": {
      "icon": "logo.png"
    }
  }
}
