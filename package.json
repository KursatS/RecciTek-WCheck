{
  "name": "reccitek-wcheck",
  "version": "1.4.4",
  "description": "RecciTek WCheck - Garanti Takip Sistemi",
  "author": "Kürşat Sinan",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npx copyfiles -u 1 \"src/*.html\" dist/ && npx copyfiles -u 1 \"src/splash.html\" dist/",
    "start": "npm run build && npx electron dist/main.js",
    "dev": "tsc --watch & copy src\\*.html dist\\ --watch & copy src\\splash.html dist\\ --watch & npx electron dist/main.js --disable-gpu --disable-web-security --disable-features=VizDisplayCompositor",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "jsdom": "^22.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.reccitek.wcheck",
    "productName": "RecciTek WCheck",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "KursatS",
      "repo": "RecciTek-WCheck"
    },
    "files": [
      "dist/**/*",
      "assets/logo.png",
      "assets/logo256.ico",
      "assets/logo512.png"
    ],
    "icon": "assets/logo256.ico",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "installerIcon": "assets/logo256.ico",
      "uninstallerIcon": "assets/logo256.ico",
      "installerHeaderIcon": "assets/logo256.ico",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": false,
      "language": "1033",
      "include": "build/installer.nsh"
    },
    "win": {
      "icon": "assets/logo256.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "logo.icns"
    },
    "linux": {
      "icon": "logo.png"
    }
  }
}