{
  "name": "reccitek-wcheck",
  "version": "1.6.4",
  "description": "RecciTek WCheck - Garanti Takip Sistemi",
  "author": "Kürşat Sinan",
  "main": "out/main/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "date-fns": "^4.1.0",
    "firebase": "^12.9.0",
    "jsdom": "^22.1.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@tailwindcss/postcss": "^4.2.1",
    "@tailwindcss/vite": "^4.2.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.20",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.7.3",
    "vite": "^6.1.1"
  },
  "overrides": {
    "vite": "^6.1.1"
  },
  "build": {
    "appId": "com.reccitek.wcheck",
    "productName": "RecciTek WCheck",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "KursatS",
      "repo": "RecciTek-WCheck"
    },
    "files": [
      "out/**/*",
      "assets/logo.png",
      "assets/logo256.ico",
      "assets/logo512.png"
    ],
    "icon": "assets/logo256.ico",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "installerIcon": "assets/logo256.ico",
      "uninstallerIcon": "assets/logo256.ico",
      "installerHeaderIcon": "assets/logo256.ico",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": false,
      "language": "1033",
      "include": "build/installer.nsh"
    },
    "win": {
      "icon": "assets/logo256.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "logo.icns"
    },
    "linux": {
      "icon": "logo.png"
    }
  }
}
